            <li><h3 style="color: azure;">Precio</h3><input type="text" required placeholder="Precio"value="<%= producto.price%>"></li>
            <li><h3 style="color: azure;">Descripcion</h3><textarea name="" id="" cols="30" rows="10" placeholder="Descripcion" ><%= producto.description%></textarea></li>
            
            <li><h3 style="color: azure;">subir imagen</h3><input type="file" required></li>
            <li><button type="submit" value="Submit">Editar Producto</button></li>
            <li><button type="button" >Cancelar</button></li>
        </ul>
    </form>
       
    </div>
</section>
