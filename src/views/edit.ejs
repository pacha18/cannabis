<section>

    <h1>Editar Producto</h1>
    <div class="form">
    <form action="" class="formulario">
        <ul>
            <li><h3 style="color: azure;">ID</h3><input type="text" required placeholder="id" value="<%= producto.id %>" readonly></li>
