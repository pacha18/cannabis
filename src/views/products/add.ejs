<body>
    <!--Header-->
    <%- include("../partials/header") %>
    <h1>Agregar Producto</h1>
<section>

    
    <div class="form">
    <form action="/products/add" class="formulario" method="post" enctype="multipart/form-data">
        <ul>
            <li><input type="text" required placeholder="Nombre del Producto" id="name" name="name"></li>
            <li><input type="text" required placeholder="Marca" id="brand" name="brand"></li>
            <li><input type="text" required placeholder="Precio" id="price" name="price"></li>
            <li><textarea cols="30" rows="10" placeholder="Descripcion" id="description" name="description"></textarea></li>
            <h3 style="color: azure;">subir imagen(formatos:jpg,jpeg,png)</h3>
            <li>
                <input type="file"  name="image" id="image" required></li>
            <li><button type="submit" value="Submit">Agregar Producto</button></li>
        </ul>
    </form>
       
    </div>
</section>
<!--Footer-->
<%- include("../partials/footer") %>
</body>
</html>