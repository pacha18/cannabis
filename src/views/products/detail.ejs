<!--Head-->
<%- include("../partials/head") %>
<body>
    <!--Header-->
    <%- include("../partials/header") %>
    <h1>Dettale del Producto: <%=producto.name%></h1>
<section class="detalle">
    <div class="detalleDerecha">
    <img src="/images/productos/<%=producto.image%>" alt="">
    <h2>Marca: <%=producto.brand%></h2>
    <h2>Descripcion</h2>    
    <p><%=producto.description%></p>
    </div>
    <div class="detalleIzquierda">
        <h2>Precio:</h2>
        <h2 class="precio">$<%= producto.price%> </h2>
        <br>
        <a href="#">Comprar Ahora</a><br><br>
        <a href="#">Agregar Al Carrito</a>
        <a href="/products/edit/<%= producto._id%>">Editar Producto</a>
        <form action="/products/delete/<%= producto._id%>" method="POST">
            <button type="submit" value="Submit">Eliminar Producto</button>
        </form>
    </div>
</section>
<!--Footer-->
<%- include("../partials/footer") %>
</body>
</html>